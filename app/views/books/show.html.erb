<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <div class="profile-container">
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <h3 class="profile-name"><%= @user.name %></h3>
          <h3 class="introduction"><%= @user.introduction %></h3>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block ",method: :get do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
      <div class="col-md-8 offset-md-1">
        <table class="table table-striped">
          <h2>Book detail</h2>
          <thead></thead>
          <tbody>
            <tr>
            <td><%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <%= @user.name %>
            <% end %><td>
            <td><%= link_to @book_show.title , book_path(@user) %><td>
            <td><%= @book_show.body %><td>

            <td>
              <% if @book_show.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book_show), method: :delete do %>
                  ♥<%= @book_show.favorites.count %> いいね
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to book_favorites_path(@book_show), method: :post do %>
                  ♡<%= @book_show.favorites.count %> いいね
                  <% end %>
                </p>
              <% end %>
            </td>
            <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book_show) %></td>
            <td><%= link_to "Destroy", book_path(@book_show), method: :delete, data: {confirm: "削除しますか？"} %></td>
             <% end %>
          </tbody>
          </table>
               <div class="comments">
                <% @book_show.book_comments.each do |book_comment| %>
                  <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                  <%= book_comment.user.name %>

                  <% if book_comment.user == current_user %>
                  <div class="comment-delete">
                  <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                  </div>
                  <% end %>
                <% end %>
                </div>
                <div class="new-comment">
                  <%= form_with(model:[@book_show, @book_comment], local: true) do |f| %>
                    <%= f.text_area :comment, rows:'9',placeholder: "コメントをここに" %>
                    <%= f.submit "送信" %>
                  <% end %>
        </div>
    </div>
  </div>
</div>