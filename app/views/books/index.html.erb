<% if @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
             <table class="table">
               <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><h3 class="profile-name"><%= @user.name %></h3></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><h3 class="introduction"><%= @user.introduction %></h3></th>
               </tbody>
             </table>
                <div>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block ",method: :get do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
                </div>

      <h2>New book</h2>

      <%= form_with model:@book, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
      <thead>
        <tr>
         <th>Users</th>
         <th>Title</th>
         <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.user do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <% end %></td>
            <td><%= link_to book.title , book_path(book.id) %></td>
            <td><%= book.body %></p></td>
          </tr>
          <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>