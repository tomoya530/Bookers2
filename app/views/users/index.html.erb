<div class="container">
  <div class="row">
    <div class="col-md-3">
       <h2>User info</h2>
        <div class="profile-container">
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <h3 class="profile-name"><%= @user.name %></h3>
          <h3 class="introduction"><%= @user.introduction %></h3>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block ",method: :get do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Uses</h1>
      <table class="table table-striped">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>